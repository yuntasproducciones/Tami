---
import type Producto from "src/models/Product";

interface Props {
  producto: Producto;
}
const { producto } = Astro.props;
---

<a
  href={`/products/details?id=${producto.id}`}
  class="my-10 flex flex-col items-center group hover:cursor-pointer"
>
  <div
    class="bg-gray-300 rounded-[15%] place-self-center h-56 w-56 p-0 mb-3 overflow-hidden"
  >
    <img
      src={producto.image ||
        `https://placehold.co/100x150/orange/white?text=${producto.nombreProducto}`}
      alt={producto.nombreProducto}
      class="h-full w-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-150"
    />
  </div>
  <div class="text-center">
    <h3 class="text-lg font-bold text-teal-700">{producto.nombreProducto}</h3>
    <p class="text-gray-500">S/ {producto.seccion}</p>
  </div>
  <div class="flex justify-between text-teal-700 mt-3">
    <svg
      width="50"
      height="50"
      viewBox="0 0 25 25"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      class="group-hover:scale-75 transition-transform duration-300 ease-in-out"
    >
      <path
        d="M16 4L8 12L16 20"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        transform="translate(-2, 0)"></path>
      <path
        d="M16 4L8 12L16 20"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        transform="translate(5, 0)"></path>
    </svg>
    <button
      class="rounded-full bg-white px-6 font-bold text-xl border-4 border-gray-300 transition-transform duration-300 ease-in-out group-hover:scale-110 content-center"
    >
      Saber MÃ¡s
    </button>
    <svg
      width="50"
      height="50"
      viewBox="0 0 25 25"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      class="group-hover:scale-75 transition-transform duration-300 ease-in-out"
    >
      <path
        d="M8 4L16 12L8 20"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        transform="translate(2, 0)"></path>
      <path
        d="M8 4L16 12L8 20"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        transform="translate(-5, 0)"></path>
    </svg>
  </div>
</a>
